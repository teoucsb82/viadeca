<% if apartment.isAvailable == true || current_user == apartment.user %>
    <div class="box">
        <%= link_to image_tag(apartment.image(:medium)), apartment %>

        <p>
            <h3>   
                <%= apartment.streetAddress %>, #<%= apartment.aptNumber %>
            </h3>
        </p>
        
        <%= apartment.beds %> bed, <%= apartment.baths %> bath<br>

        <p>
            <strong>
                Rent: 
            </strong>
            $<%= apartment.rent %> per month.
        </p>
        <center>
            <%= link_to 'More info >>', apartment, class: "btn btn-primary btn-small" %>
        
            <% if current_user == apartment.user %>
                <p>
                    <%= link_to 'Modify', edit_apartment_path(apartment), class: "btn btn-success btn-small" %>
                    <%= link_to 'Delete', apartment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-small" %>
                </p>
            <% end %>
        </center>
    </div>
<% end %>
