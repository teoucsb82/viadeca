<% provide(:title, 'Edit Listing') %>
<% if current_user.admin? %>
  <div class="hero-unit">
	<h1>Editing apartment - <%= @apartment.streetAddress %>, #<%= @apartment.aptNumber %></h1>
</div>
	<%= render 'form' %>

<% else %>
  <div class="row">
      <div class="span12">
          <div class="well">
            <center>
            <h1>Oops! This unit is currently unavailable</h1>
            </center>
          </div>
      </div>
  </div>
<% end %>