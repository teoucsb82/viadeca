<!-- app/views/inquiries/_form.html.erb -->
 
<%= simple_form_for(inquiry, html: { class: 'form-horizontal'}) do |f| %>
 
  <%= f.input :name %>
  <%= f.input :email, placeholder: 'user@domain.com' %>
  <%= f.input :message, as: :text, input_html: { rows: "6" }, placeholder: '1000 char max' %>
  
    <div class="form-actions">
      <%= f.submit "Send Message", class: "btn btn-success btn-large" %>
    </div>
<% end %>