<%= simple_form_for(@apply, html: {class: "form-horizontal"} ) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <div class="row">
        <div class="span6">
            <h3>Personal Information</h3><hr>
            <div class="well">
                <%= f.input :aptaddress, label: "Applying for unit" %>
                <%= f.input :name %>
                <%= f.input :email %>
                <%= f.input :phone, placeholder: "xxx-xxx-xxxx" %>
                <%= f.input :dob, label: "Date of Birth", placeholder: "mm/dd/yy" %>
                <%= f.input :ssn, label: "SSN", placeholder: "xxx-xx-xxxx" %>
                <%= f.input :license, label: "Driver's License #" %>
                <%= f.input :licensestate, label: "Driver's License State" %>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="span6">
            <h3>Current Address</h3><hr>
            <div class="well">    
                <%= f.input :current_address, label: "Current Address" %>
                <%= f.input :current_unit, label: "Unit" %>
                <%= f.input :current_city, label: "Current City" %>
                <%= f.input :current_state, label: "Current State" %>
                <%= f.input :current_zip, label: "Current Zip" %>
                <%= f.input :current_start_date, label: "Move-in date", placeholder: "mm/yy" %>
                <%= f.input :current_end_date, label: "Move-out date", placeholder: "mm/yy" %>
                <%= f.input :current_total_date, label: "Total time lived at current address" %>
                <%= f.input :current_rent, label: "Current Rent" %>
                <%= f.input :current_manager, label: "Manager's Name" %>
                <%= f.input :current_manager_phone, label: "Manager's Phone", placeholder: "xxx-xxx-xxxx" %>
                <%= f.input :current_reason, label: "Reason for leaving", as: :text, input_html: { rows: "3" }  %>
            </div>
        </div>
        <div class="span6">
            <h3>Previous Address</h3><hr>            
            <div class="well">    
                <%= f.input :previous_address, label: "Previous Address" %>
                <%= f.input :previous_unit, label: "Unit" %>
                <%= f.input :previous_city, label: "Previous City" %>
                <%= f.input :previous_state, label: "Previous State" %>
                <%= f.input :previous_zip, label: "Previous Zip" %>
                <%= f.input :previous_start_date, label: "Move-in date", placeholder: "mm/yy" %>
                <%= f.input :previous_end_date, label: "Move-out date", placeholder: "mm/yy" %>
                <%= f.input :previous_total_date, label: "Total time lived at previous address" %>
                <%= f.input :previous_rent, label: "Rent" %>
                <%= f.input :previous_manager, label: "Manager's Name" %>
                <%= f.input :previous_manager_phone, label: "Manager's Phone" %>
                <%= f.input :previous_reason, label: "Reason for leaving", as: :text, input_html: { rows: "3" }  %>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="span6">
            <h3>Employer Information</h3><hr>
            <div class="well">      
                <%= f.input :employer, label: "Employer Name" %>
                <%= f.input :employer_address %>
                <%= f.input :employer_city %>
                <%= f.input :employer_state %>
                <%= f.input :employer_zip %>
                <%= f.input :employer_start_date, label: "Start Date", placeholder: "mm/yy" %>
                <%= f.input :employer_total_date, label: "Time worked at current employer" %>
                <%= f.input :employer_salary, label: "Annual Salary" %>
                <%= f.input :employer_title, label: "Job Title" %>
                <%= f.input :employer_supervisor, label: "Supervisor's Name" %>
                <%= f.input :employer_supervisor_title, label: "Supervisor's Title" %>
                <%= f.input :employer_supervisor_phone, label: "Supervisor Phone" %>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="span6">
            <h3>Emergency Contact Information</h3><hr>
            <div class="well">  
                <%= f.input :emergency_contact %>
                <%= f.input :emergency_relationship, label: "Relationship" %>
                <%= f.input :emergency_phone %>
            </div>
        </div>
        <div class="span6">
            <h3>Vehicle Information</h3><hr>
            <div class="well">
                <%= f.input :vehicle_make, placeholder: "ex: Toyota" %>
                <%= f.input :vehicle_model, placeholder: "ex. Prius" %>
                <%= f.input :vehicle_color %>
                <%= f.input :vehicle_year %>
                <%= f.input :vehicle_license, label: "License Plate" %>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="span12">
            <h3>Additional Information</h3><hr>
            <div class="well">  
                <%= f.input :message, label: "Additional Information", as: :text, :input_html => { :rows => 5, :placeholder => "Please enter any additional information you want here. Examples include names of roommates you are applying with or any special requests you may have.", :class => "span9"} %>
            </div>
        </div>


        <div class="span12">
            <h3>Terms and Conditions</h3><hr>
            <div class="well">  
                <small>
                    I authorize <strong>Via Deca, LLC.</strong> to immediately obtain such credit reports, character reports, criminal reports, verification of rental and employement history. I further understand that false, fraudulent or misleading information disclosed or omitted or incomplete information may be grounds for denial of tenancy or subsequent eviction. If you enter into a rental agreement with <strong>Via Deca, LLC.</strong> they have the right to obtain credit reports, criminal reports and background information on you while you are residing in the rental property.
                </small>
                <%= f.input :acknowledgment %>
             </div>
            </div>
        </div>
    </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
