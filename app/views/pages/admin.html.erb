		<div class="row">
	      <div class="span12">
	          <div class="well">
	          	<center>
		            <h1><%= yield(:title) %></h1>
		        </center>
	          </div>
	      </div>
	    </div>
		
		<div class="row">
	    	<div class="span4">
          		<div class="well">
           			<center><h2>Availabilities Management</h2><hr>
           			<p><%= link_to "View Availabilities", apartments_path, class: "btn btn-primary" %></p>
           			<p><%= link_to "Add New Listing", new_apartment_path, class: "btn btn-success" %></p>   
           			</center>   
        		</div>
     		</div>

	    	<div class="span4">
