                <p><%= link_to "Coming Soon", '#', class: "btn btn-success" %></p>
                </center>   
            </div>
        </div>
      </div>
      
<% else %>

        <div class="row">
      <div class="span12">
          <div class="well">
            <center>
            <h1>Oops! This page doesn't exist!</h1>
            </center>
          </div>
      </div>
