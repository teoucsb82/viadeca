<% provide(:title, 'Application Fee Payment') %>

<center>
  <div class="hero-unit">

		<%= form_tag charges_path do %>
		  <article>
		    <label class="amount">
		      <span>Amount: $20.00</span>
		    </label>
		  </article>

		  <script src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button"
		          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
		          data-description="Tenant Application Fee"
		          data-amount="2000"></script>
		<% end %>
	</div>
</center>