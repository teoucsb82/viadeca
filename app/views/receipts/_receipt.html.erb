
<tr>
    <td><%= receipt.month %>/<%= receipt.day %>/<%= receipt.year %></td>
    <td><%= receipt.store %></td>
    <td width="30%"><%= receipt.description %></td>
    <td><%= Apartment.find(receipt.purchased_for).description %></td>
    <td>$<%= receipt.price %></td>
    <td><%= receipt.payment_method %></td>
    <td><%= link_to 'Show', receipt %></td>
    <td><%= link_to 'Edit', edit_receipt_path(receipt) %></td>
    <td><%= link_to 'Destroy', receipt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>
