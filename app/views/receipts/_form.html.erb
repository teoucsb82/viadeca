<%= simple_form_for(@receipt, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :image_file_size, class: "alert alert-error" %>
  <%= f.full_error :image_content_type, class: "alert alert-error" %>

  <div class="form-inputs">
    <%= f.input :image, label: "Upload Receipt Scan" %>
    <%= f.input :store %>
    <%= f.input :month, :include_blank => "",
      collection: Receipt::MONTHS %>
    <%= f.input :day %>
    <%= f.input :year, :input_html => { :value => 2013 } %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :payment_method, :include_blank => "--Select Payment Method--",
      collection: Receipt::PAYMENT.sort %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
